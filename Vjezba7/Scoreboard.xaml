<Window x:Class="Vjezba7.Scoreboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vjezba7"
        mc:Ignorable="d"
        Title="Scoreboard" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="myData" HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="792" AutoGenerateColumns="False">
            <DataGrid.Columns>
                
                <DataGridTextColumn Binding="{Binding Name}" Header="Name"/>
                <DataGridTextColumn Binding="{Binding Win}" Header="Wins" SortDirection="Descending"/>
                <DataGridTextColumn Binding="{Binding Lose}" Header="Lose"/>
                <DataGridTextColumn Binding="{Binding Draw}" Header="Draw"/>
            </DataGrid.Columns>
        </DataGrid>
                  
                 



    </Grid>
</Window>
